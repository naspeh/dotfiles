# Network
${if_up wlp3s0}\
${color1}${font :style=bold:size=10}Wireless Network$font${color3}${voffset 1}${hr 0}$color
${color2}SSID:$color${goto 50}${wireless_essid wlp3s0} ${goto 131}\
${color2}Signal: $color${goto 180}${wireless_link_qual wlp3s0}/${wireless_link_qual_max wlp3s0}
${color2}${voffset -4}${wireless_link_bar 3,250 wlp3s0}
${color2}Local:$color${goto 50}${addr wlp3s0}${goto 131}\
${color2}Public:$color${goto 180}${execi 300 curl ip.appspot.com}
${color2}${downspeedgraph wlp3s0 15,123 003300 6ddd00}${alignr}\
${color2}${upspeedgraph wlp3s0 15,123 330000 e3170d}$color
${color2}Down: $color${goto 50}${downspeedf wlp3s0} k/s${goto 131}\
${color2}Up: $color${goto 180}${upspeedf wlp3s0} k/s
${color2}Total:$color${goto 50}${totaldown wlp3s0} ${goto 131}\
${color2}Total:$color${goto 180}${totalup wlp3s0}\
${else}\
${color1}${font :style=bold:size=10}Ethernet$font${color3}${voffset 1}${hr 0}$color
${color2}${downspeedgraph eth0 75,123 003300 6ddd00}${alignr}\
${color2}${upspeedgraph eth0 75,123 330000 e3170d}$color
${color2}Local:$color${goto 50}${addr eth0}${goto 131}\
${color2}Public:$color${goto 180}${execi 300 curl ip.appspot.com}
${color2}Down: $color${goto 50}${downspeedf eth0} k/s${goto 131}\
${color2}Up: $color${goto 180}${upspeedf eth0} k/s
${color2}Total:$color${goto 50}${totaldown eth0}${goto 131}\
${color2}Total:$color${goto 180}${totalup eth0}\
$endif

