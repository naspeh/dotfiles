${color1}${font :style=bold:size=9}Weather$font${color3}${voffset 1}${hr 0}$color
${font :style=bold:size=9}${execi 60 ~/bin/weather}$font
${font Sans:size=7}${execi 60 ~/bin/weather -v -i "  "}
$endif\

