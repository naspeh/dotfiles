#!/bin/zsh

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

export EDITOR=vim
export BROWSER=chromium
export TERMINAL=sakura
export PATH="$PATH:$HOME/bin"

xset -b
setxkbmap -option "terminate:ctrl_alt_bksp"
setxkbmap -layout "us,ru(winkeys)" -option "grp:caps_toggle,grp_led:scrol"
#xrdb ~/.Xresources &

DEFAULT_SESSION=i3
case $1 in
  startxfce4|i3|awesome|wmii|wmfs) SESSION=$1 ;;
  *) SESSION=$DEFAULT_SESSION ;;
esac
$SESSION &
PID=$!

if [ $SESSION == 'startxfce4']; then
    devilspie &
fi

(sleep 1; conky) &
(sleep 1; sbxkb) &
#fbxkb &
orage &
volumeicon &
batti &
clipit &
#stardict &
goldendict &
tider &

wait $PID
