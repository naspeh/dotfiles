#!/bin/sh
case "$1" in
todo)
    pygmentize -O "font_name=Liberation Mono,font_size=16" -o ~/todo.png ~/todo.rst
    convert ~/todo.png -background "#000" -gravity center -extent 1366x768 ~/todo.png
    my bg
;;
lock)
    i3lock -i ~/todo.png
;;
bg)
    feh -R 30 --bg-center ~/todo.png
;;
*)
    echo $"Usage: $0 {todo|lock|bg}"
    exit 1
esac
