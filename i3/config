# Startup
exec --no-startup-id xsetroot -solid "#333343"

set $mod Mod1
set $terminal evilvte
set $htop evilvte -T htop -e htop

workspace_layout tabbed
focus_follows_mouse no
new_window 1pixel
new_float 1pixel

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
#font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose an xft font, such as:
font xft:DejaVu Sans 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

for_window [class="(?i)goldendict"] floating enable
for_window [class="(?i)stardict"] floating enable
for_window [class="(?i)dropbox"] floating enable
for_window [class="(?i)(gajim|pidgin)"] floating enable; move workspace 8: jabber
for_window [class="(?i)skype"] floating enable; move workspace 9: skype
for_window [class="(?i)deadbeef"] floating enable
for_window [class="(?i)transmission"] floating enable
for_window [class="(?i)orage"] floating enable
for_window [class="(?i)lxappearance"] floating enable
for_window [class="(?i)gmrun"] floating enable
for_window [class="(?i)xfce4-appfinder"] floating enable; move position 200px 100px
for_window [class="(?i)xfce4-notifyd"] floating enable; border none
for_window [class="(?i)solaar"] floating enable
for_window [title="Event Tester"] floating enable
for_window [class="(?i)thunar" title="File Operation Progress"] floating enable
for_window [class="(?i)chromium" window_role="pop-up"] floating enable
for_window [class="(?i)chromium" window_role="pop-up" title="Gmail"] floating disable

bindsym $mod+t exec $terminal
bindsym $mod+p exec xfce4-appfinder
bindsym $mod+r exec xfce4-appfinder -c

bindsym Print exec xfce4-screenshooter
bindsym $mod+Ctrl+l exec i3lock -i ~/lock-s.png
bindsym $mod+Ctrl+n exec i3-input -F 'rename workspace to "%s"' -P 'New name: '
bindsym $mod+Ctrl+b exec chromium
bindsym $mod+Ctrl+i exec internet
bindsym $mod+Ctrl+h exec $htop
bindsym $mod+Ctrl+m exec hdmi

bindsym $mod+b workspace back_and_forth
bindsym $mod+n [urgent="oldest"] focus

# kill focused window
bindsym $mod+Shift+q kill
bindsym $mod+F4 kill

# toggle tiling / floating
bindsym $mod+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+Tab focus mode_toggle

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

mode "system" {
    bindsym e exit
    bindsym s exec systemctl suspend; mode "default"
    bindsym r exec systemctl reboot
    bindsym q exec systemctl poweroff

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+q mode "system"

mode "tider" {
    bindsym a exec tider call target; mode "default"
    bindsym Tab exec tider call toggle-active; mode "default"
    bindsym w exec tider call menu; mode "default"
    bindsym s exec tider call report; mode "default"
    bindsym d exec tider call disable; mode "default"
    bindsym r exec tider call reload; mode "default"
    bindsym q exec tider call quit; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+a mode "tider"

mode "window" {
    bindsym f fullscreen; mode "default"
    bindsym t layout tabbed; mode "default"
    bindsym s layout toggle split; mode "default"

    # focus the parent/child container
    bindsym p focus parent
    bindsym Shift+p focus child

    bindsym x move scratchpad
    bindsym v scratchpad show

    bindsym c move position center

    bindsym Left resize shrink width 10 px or 5 ppt
    bindsym Down resize grow height 10 px or 5 ppt
    bindsym Up resize shrink height 10 px or 5 ppt
    bindsym Right resize grow width 10 px or 5 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+w mode "window"

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+colon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 0

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 0

