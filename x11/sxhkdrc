XF86Audio{Raise,Lower}Volume
    amixer sset Master {2%+, 2%-} unmute && notify-send -h int:value:$(amixer sget Master | grep -Pom1 '\d*%') "Volume"
XF86AudioMute
    amixer sset Master toggle && notify-send "$(amixer sget Master | grep -Pom1 '\[(on|off)\]') Volume"

alt+t
    $TERMINAL
alt+e
    dmenu_run
alt+{p,r}
    xfce4-appfinder { ,-c}
alt+Print
    xfce4-screenshooter
alt+f
    perevod call fetch
alt+ctrl+l
    i3lock -i ~/lock-s.png
alt+ctrl+b
    chromium
alt+ctrl+h
    $TERMINAL evilvte -T htop -e htop

alt+s; {r,q}
    systemctl {reboot,poweroff}

alt+i; {i,l,k,s,w}
    internet { ,light,kill,skype,work}

alt+a; {a,w,s,d,r,q}
    tider call {target,menu,report,disable,reload,quit}
