#!/bin/sh
if [ "$SESSION" = "i3" ]; then
    #feh --bg-scale /usr/share/archlinux/wallpaper/archlinux-deep-aurora.jpg
    i3lock -i ~/lock-s.png
    wmname LG3D
    feh --bg-scale ~/lock-s.png
    i3-msg 'workspace "2: term"; exec evilvte'
else
    if [ "$(hostname)" = "pad" ]; then
        sleep 1
    else
        sleep 2
    fi
    sbxkb &
    volumeicon &
    devilspie &
    cbatticon &
fi

xcompmgr &
sxhkd &
orage &
parcellite &
stardict -h &
tider &
perevod &
