#!/bin/sh
if [ "$SESSION" = "i3" ]; then
    wmname LG3D
    i3lock -i ~/lock-s.png
    feh --bg-scale ~/lock-s.png
    i3-msg 'workspace "2: term"; exec evilvte'
else
    if [ "$(hostname)" = "pad" ]; then
        sleep 1
    else
        sleep 2
    fi
    volumeicon &
    cbatticon &
    sbxkb &
    devilspie &
fi

xcompmgr &
sxhkd &
parcellite &
stardict -h &
tider &
perevod &
