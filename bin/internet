#!/bin/zsh

if [ "$1" = "kill" ]; then
    killall dropbox gajim skype chromium
    yandex-disk stop
    exit
fi

# Wait for the internet
while [ '0' = $(ping -c1 google.com | grep -c "1 received") ]; do done

if [ ! "$DISPLAY" ]; then
    export DISPLAY=:0
fi


chromium &
(sleep 1; i3-msg '[class="(?i)chromium"] move workspace 1: web') &

[ "$1" = "light" ] && exit

yandex-disk start
dropboxd &
skype &
(sleep 1; gajim) &
