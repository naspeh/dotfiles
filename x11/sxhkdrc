XF86Audio{Raise,Lower}Volume
    amixer sset Master {2%+, 2%-} unmute && pkill -RTMIN+1 i3blocks
#    pactl set-sink-volume @DEFAULT_SINK@ {+,-}2% && pkill -RTMIN+1 i3blocks
#    pamixer  -{i,d} 2 && pkill -RTMIN+1 i3blocks
#    ponymix unmute; ponymix {in,de}crease 2% && pkill -RTMIN+1 i3blocks
XF86AudioMute
    amixer sset Master toggle && pkill -RTMIN+1 i3blocks
#    pactl set-sink-mute @DEFAULT_SINK@ toggle && pkill -RTMIN+1 i3blocks
#    pamixer -t && pkill -RTMIN+1 i3blocks
#    ponymix unmute; ponymix toggle && pkill -RTMIN+1 i3blocks
XF86AudioMicMute
    amixer set Capture toggle

XF86MonBrightness{Down,Up}
    xbacklight -inc {-,+}10 && notify-send "$(printf 'ï†…  %d%%' $(xbacklight -get))"

alt+t
    $TERMINAL
alt+r
    rofi -show run
# alt+c
#     CM_LAUNCHER=rofi clipmenu
alt+c
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'
alt+e
    rofimoji

alt+p
    xfce4-appfinder
alt+ctrl+Print
    xfce4-screenshooter
alt+Print
#    ffcast -qb -# "$(xdotool getactivewindow)" png ~/Screenshots/"$(date +%F--%T)".png
    maim -i $(xdotool getactivewindow) ~/Screenshots/"$(date +%F--%T)".png
alt+g
    gtranslate
alt+ctrl+l
    my lock
alt+ctrl+b
    chromium
alt+ctrl+h
    $TERMINAL -T htop -e htop
alt+ctrl+o
    orage
alt+ctrl+m
    #monitor
    lxrandr
alt+ctrl+u
    my lang

alt+ctrl+{r,q,s}
    systemctl {reboot,poweroff,suspend}

alt+i; {i,e,l,k,w,s,z,m,t}
    internet { ,mail,light,kill,work,slack,zoom,music,tidal}

alt+a; {a,w,s,d,r,q}
    tider call {target,menu,report,disable,reload,quit}

alt+s; {s,q}
    {ffcast -# "$(xdotool getactivewindow)" rec ~/Screenshots/"$(date +%F--%T)".mkv,pkill -fxn '(/\S+)*ffmpeg\s.*\sx11grab\s.*'}

