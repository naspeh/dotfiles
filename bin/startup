#!/bin/sh
if [ "$SESSION" = "i3" ]; then
    /usr/lib/lxpolkit/lxpolkit &
    xfsettingsd &

    hsetroot -solid "#333343"
    i3-msg 'workspace "2: term"; exec evilvte'
else
    if [ "$(hostname)" = "pad" ]; then
        sleep 1
    else
        sleep 2
    fi
    devilspie &
fi

xcompmgr &
cbatticon &
conky &
sbxkb &
orage &
volumeicon &
parcellite &
stardict &
tider &
perevod &
