#!/usr/bin/env python
import json
import re
import requests

q = 'select * from weather.forecast where woeid in (select woeid from geo.places(1) where text="Yaremche,UA") and u="c"'

res = requests.get('http://query.yahooapis.com/v1/public/yql', {'format': 'json', 'q': q})
res = json.loads(res.text)
res = res['query']['results']['channel']['item']['condition']

symbol = '☀'
symbols = (
    ('.*Snow.*', '❄'),
    ('.*(Rain|Shower).*', '☂'),
    ('.*Thunderstorm.*', '☈'),
    ('.*Lightning.*', '☇')
)
for pattern, s in symbols:
    if re.match(pattern, res['text']):
        symbol = s
        break

print('{symbol} {text}, {temp}°C'.format(symbol=symbol,**res))
