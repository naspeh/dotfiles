#!/bin/zsh

if [ "$1" = "kill" ]; then
    killall dropbox gajim skype chromium
    yandex-disk stop
    exit
fi

Q="0"
while [ $Q = "0" ]; do
   Q=$(ping -c1 www.google.com 2> /dev/null | grep -c google);
done

if [ ! "$DISPLAY" ]; then
    export DISPLAY=:0
fi

i3-msg 'workspace "1: web"; exec chromium; workspace back_and_forth'

[ "$1" = "light" ] && exit

yandex-disk start
dropboxd &
skype &
(sleep 1; gajim) &
