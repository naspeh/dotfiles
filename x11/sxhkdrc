XF86Audio{Raise,Lower}Volume
    amixer sset Master {2%+, 2%-} unmute && pkill -RTMIN+1 i3blocks
XF86AudioMute
    amixer sset Master toggle && pkill -RTMIN+1 i3blocks

alt+t
    $TERMINAL
alt+e
    rofi -rnow
alt+{p,r}
    xfce4-appfinder { ,-c}
alt+Print
    xfce4-screenshooter
alt+f
    perevod call fetch
alt+ctrl+l
    i3lock -i ~/lock-s.png
alt+ctrl+b
    chromium
alt+ctrl+h
    $TERMINAL -T htop -e htop

alt+s; {r,q,s}
    systemctl {reboot,poweroff,suspend}

alt+i; {i,l,k,s}
    internet { ,light,kill,skype}

alt+a; {a,w,s,d,r,q}
    tider call {target,menu,report,disable,reload,quit}
