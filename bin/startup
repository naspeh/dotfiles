#!/bin/sh
if [ "$SESSION" = "i3" ]; then
    /usr/lib/lxpolkit/lxpolkit &
    hsetroot -solid "#333343"
    i3-msg 'workspace "2: term"; exec evilvte'
    xcompmgr &
    xfce4-power-manager &
    xfsettingsd &
else
    if [ "$(hostname)" = "pad" ]; then
        sleep 1
    else
        sleep 2
    fi
    devilspie &
fi

wicd-client --tray &
#cbatticon &
conky &
sbxkb &
orage &
volumeicon &
parcellite &
stardict &
tider &
perevod &
