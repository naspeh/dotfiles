mode "screencast" {
    bindsym f exec ffcast -# "$(xdotool getactivewindow)" rec ~/Screenshots/"$(date +%Y%m%d-%H%M%S)".mp4; mode "default"
    bindsym q exec pkill -fxn '(/\S+)*ffmpeg\s.*\sx11grab\s.*'; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+f mode "screencast"

