#!/bin/zsh

if [ "$1" = "kill" ]; then
    killall dropbox gajim skype skype-call-recorder chromium
    yandex-disk stop
    exit
fi

# Wait for the internet
while [ '0' = $(ping -c1 google.com | grep -c "1 received") ]; do done

if [ ! "$DISPLAY" ]; then
    export DISPLAY=:0
fi

if [ "$1" = "skype" ]; then
    skype &
    skype-call-recorder &
    exit
fi

gmail &
if [ "$SESSION" = "i3" ]; then
    i3-msg 'workspace 1: web; exec chromium'
else
    chromium
fi

[ "$1" = "light" ] && exit

yandex-disk start
dropboxd &
#(sleep 1; gajim) &
