#!/bin/sh
xset -b
xrdb ~/.Xresources

setxkbmap -option "terminate:ctrl_alt_bksp"
setxkbmap -layout "us,ru" -option "grp:caps_toggle,grp_led:caps"

# PgDn & PgUp on x220
xmodmap -e "keycode 166 = Prior"
xmodmap -e "keycode 167 = Next"

if [ "$SESSION" = "i3" ]; then
    wmname LG3D
    my lock
    my bg
    i3-msg 'workspace "2: term"; exec $TERMINAL'
else
    # if [ "$(hostname)" = "box" ]; then
    #     sleep 2
    # else
    #     sleep 1
    # fi
    volumeicon &
    devilspie &
fi

xcompmgr &
sxhkd &
tider &
perevod &
stardict -h &
cbatticon &
clipit &
#parcellite &
