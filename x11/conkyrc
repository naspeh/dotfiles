## Conky
background yes
out_to_console no
top_cpu_separate yes
max_port_monitor_connections 256
cpu_avg_samples 1
net_avg_samples 1
update_interval 1

# Text
uppercase no
override_utf8_locale yes
use_xft yes
xftfont Monospace:size=7.5

# Window
own_window yes
own_window_class Conky
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_type override
own_window_colour 111111

# Graphics
double_buffer yes
draw_borders no
draw_graph_borders yes
draw_shades no
draw_outline no

# Layout
alignment top_right
gap_x 10
gap_y 40
maximum_width 250
minimum_size 1000

# Colors
default_shade_color 000000
default_outline_color 000000
default_color ffffff
color1 008F11
color2 b2b2b2
color7 0000ff
color3 00ff00
color8 ffff00
color9 ff0000


