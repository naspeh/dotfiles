XF86Audio{Raise,Lower}Volume
    amixer sset Master {2%+, 2%-} unmute && pkill -RTMIN+1 i3blocks
XF86AudioMute
    amixer sset Master toggle && pkill -RTMIN+1 i3blocks

XF86{Back,Forward}
    xdotool key --window=$(xdotool getactivewindow) {Prior, Next}

alt+t
    $TERMINAL
alt+r
    rofi -show run
alt+p
    xfce4-appfinder
alt+Print
    xfce4-screenshooter
alt+g
    perevod call fetch
alt+ctrl+l
    my lock
alt+ctrl+b
    chromium
alt+ctrl+h
    $TERMINAL -T htop -e htop
alt+ctrl+o
    orage
alt+ctrl+m
    monitor

alt+ctrl+{r,q,s}
    systemctl {reboot,poweroff,suspend}
alt+i; {i,l,k,s,p,w,d}
    internet { ,light,kill,skype,ppp,wifi,down}
alt+a; {a,w,s,d,r,q}
    tider call {target,menu,report,disable,reload,quit}

# Xfce specific
alt+F1
    xfce4-popup-applicationsmenu
alt+F2
    xfce4-popup-windowmenu -p
