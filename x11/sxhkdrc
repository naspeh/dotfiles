XF86Audio{Raise,Lower}Volume
    amixer sset Master {2%+, 2%-} unmute && pkill -RTMIN+1 i3blocks
#    pactl set-sink-volume @DEFAULT_SINK@ {+,-}2% && pkill -RTMIN+1 i3blocks
#    pamixer  -{i,d} 2 && pkill -RTMIN+1 i3blocks
#    ponymix unmute; ponymix {in,de}crease 2% && pkill -RTMIN+1 i3blocks
XF86AudioMute
    amixer sset Master toggle && pkill -RTMIN+1 i3blocks
#    pactl set-sink-mute @DEFAULT_SINK@ toggle && pkill -RTMIN+1 i3blocks
#    pamixer -t && pkill -RTMIN+1 i3blocks
#    ponymix unmute; ponymix toggle && pkill -RTMIN+1 i3blocks
XF86AudioMicMute
    amixer set Capture toggle

alt+t
    $TERMINAL
alt+r
    rofi -show run
alt+p
    xfce4-appfinder
alt+Print
    xfce4-screenshooter
alt+g
    gtranslate
alt+ctrl+l
    my lock
alt+ctrl+b
    chromium
alt+ctrl+h
    $TERMINAL -T htop -e htop
alt+ctrl+o
    orage
alt+ctrl+m
    monitor
alt+ctrl+u
    my lang

alt+ctrl+{r,q,s}
    systemctl {reboot,poweroff,suspend}
alt+i; {i,e,l,k,w,s,z,m,t}
    internet { ,mail,light,kill,work,slack,zoom,music,tidal}
alt+a; {a,w,s,d,r,q}
    tider call {target,menu,report,disable,reload,quit}

alt+c
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'
#    clipster -sc


# Xfce specific
alt+F1
    xfce4-popup-applicationsmenu
alt+F2
    xfce4-popup-windowmenu -p
